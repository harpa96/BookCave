@model BookCave.Models.ViewModels.RegisterViewModel;

<h1>Register</h1>

<form class="form-horizontal" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <input type="email" asp-for="Email" class="form-control" placeholder="Skrifaðu netfangið þitt"/>
    </div>
    <div class="form-group">
        <input type="text" asp-for="FirstName" class="form-control" placeholder="Skrifaðu fornafn"/>
    </div>
    <div class="form-group">
        <input type="text" asp-for="LastName" class="form-control" placeholder="Skrifaðu eftirnafn"/>
    </div>
    <div class="form-group">
        <input type="password" asp-for="Password" class="form-control" placeholder="Skrifaðu lykilorðið þitt"/>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Register</button>
    </div>
</form>