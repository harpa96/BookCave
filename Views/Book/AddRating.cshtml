@model BookCave.Models.ViewModels.CommentViewModel

<div>
    <h1>Einkunnargjöf fyrir @ViewBag.Title</h1>
</div>

<div>
    <form method="POST">
        <div class="form-group">
            <label for="rating">Þín einkunnargjöf (af 5)</label>
            <select class="form-control" id="rating" asp-for="Rating">
                <option selected="selected" hidden>Gefðu einkunn</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="form-group">
            <label for="comment">Þín athugasemd</label>
            <input type="text" class="form-control" id="comment" asp-for="Text" >
        </div>
        <input type="submit" value="Vista"/>
    </form>
</div>