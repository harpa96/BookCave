    <div class="row content">
        <div class="col-sm-2 sidenav">
            <ul class="nav navbar-nav">
                <div class="about-button">
                    <li><a class="btn btn-info" role="button" asp-controller="Home" asp-action="OurTeam">Teymið okkar</a></li>
