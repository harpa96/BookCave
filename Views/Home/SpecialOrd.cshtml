        <h2>Upplýsingar um kaupanda</h2>

        <form asp-action="SpecialOrd">
        <div class="form-group col-md-8">
            <label for="inputName">Nafn</label>
            <input asp-for="Name" type="text" class="form-control" id="inputName"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label for="inputPhone">Símanúmer</label>
            <input asp-for="Phone" type="text" class="form-control" id="inputPhone"/>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5">
            <label for="inputAddress">Heimilisfang</label>
            <input asp-for="Address"type="text" class="form-control" id="Address"/>
            <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
            <label for="inputZip">Póstnúmer</label>
            <input asp-for="Zip" type="text" class="form-control" id="inputZip"/>
            <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
            <label for="inputCity">Borg</label>
            <input asp-for="City"type="text" class="form-control" id="inputCity"/>
            <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail">Netfang</label>
            <input asp-for="Email" type="email" class="form-control" id="inputEmail"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <h3>Upplýsingar um bók</h3>   
        <div class="form-group col-md-6">
        <label for="title"><b>Titill</b></label>
        <input type="text" name="title" required/>
        
        </div>

        <div class="form-group col-md-6"> 
        <label for="author"><b>Höfundur</b></label>
        <input type="text" name="author" required/>
        </div>
            
        <div class="form-group col-md-6">  
        <label for="publishDate"><b>Útgáfuár</b></label>
        <input type="text" name="publishDate"/>
        </div>

        <div class="form-group col-md-6">
        <label for="amount"><b>Magn</b></label>
        <input type="text" name="amount" required/>
        </div>

        <button type="button" class="btn btn-primary" id="addBook-btn">Bæta við bók</button>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Titill</th>
                <th>Höfundur</th>
                <th>Útgáfuár</th>
                <th>Magn</th>
            </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
        <br>
        <br>

        <div class="form-group">
        <label for="exampleFormControlTextarea1">Athugasemdir</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="4"></textarea>
        </div>

        <div class="form-group">
            <div class="form-check">
      <!--      <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck"> Ég samþykki skilmála</label>-->
            </div>
        </div>
        
        <button type="submit" class="btn btn-success">Senda pöntun</button>

        </form>
    </div>
